
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="conteiner sign-up-border">
  <form>
<h2 class="sign-up-title">新規登録</h2>
    <div class="form-group row">
      <div class="col-sm-3">
          <%= f.label :name,for:'inputName3',class: 'control-label'%>
        </div>
        <div class="col-sm-9">
          <%= f.text_field :name, autofocus: true,autocomplete: "name", class: 'form-control',id: 'inputName3'%>
        </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label :email,for:'inputEmail3',class: 'control-label' %>
      </div>
      <div class="col-sm-9">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control',id: 'inputEnail3' %>
      </div>
    </div>
    
    <div class="form-container">
      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label :category_id, "職業選択" %>
        </div>

        <div class="col-sm-9 category_form">
          <%=f.collection_select :category_id, @category_parent_array || [], :id, :name,{prompt: "職業を選択してください"}, class: "select-default form-control", id: "parent_category"%>
          <p class="category-p">※学生の方は職業を『学生』で登録してください</p>
        </div>
      </div>
    </div>


    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label :password,for:'inputPassword3',class: 'control-label'  %>
        <% if @minimum_password_length %>
        <div>(英数字混合で<%= @minimum_password_length %> 文字以上)</div>
      </div>
       <% end %>
      <div class="col-sm-9">
       <%= f.password_field :password, autocomplete: "new-password", class: 'form-control',id: 'inputPassword3' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label :password_confirmation,for:'inputPasswordConfiramation3',class: 'control-label'  %>
      </div>
      <div class="col-sm-9">
       <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control',id: 'inputPasswordConfiramation3'  %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-12">
        <%= f.submit "登録する",class: 'btn-primary' %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
    <% end %>
  </form>
</div>