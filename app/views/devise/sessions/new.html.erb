
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="conteiner log-in-border">
  <form>
    <h2 class="sign-up-title">ログイン</h2>
    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label :email,for:'inputEmail3',class: 'control-label' %>
      </div>
      <div class="col-sm-9">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control',id: 'inputEmail3' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label :password,for:'inputPassword3',class: 'control-label' %>
      </div>
      <div class="col-sm-9">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control',id: 'inputPassword3'  %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="form-group row">
      <div class="col-sm-12">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
    <% end %>

    <div class="form-group row">
      <div class="col-sm-12">
        <%= f.submit "ログイン",class: 'btn-primary'  %>
      </div>
     <% end %>
  </form>
</div>

<%= render "devise/shared/links" %>
