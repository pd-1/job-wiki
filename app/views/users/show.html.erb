<h1>ユーザー詳細</h1>

<% if @user.id == current_user.id %>

<% else %>
  <% if @isRoom == true %>
    <a href="/rooms/<%= @roomId %>">チャットへ</a>
  <% else %>
    <%= form_for @room do |f| %>
      <%= fields_for @chat do |e| %>
        <%= e.hidden_field :user_id, value: @user.id %>
